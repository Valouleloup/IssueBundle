{% extends '@ValouleloupIssue/Tag/base_tag.html.twig' %}

{% block body %}
    <div class="row">
        <div class="panel panel-default send-tag" id="send-tag">

            <div class="panel-heading">New Tag</div>
            <div class="panel-body">
                <div class="form">
                    {{ form_start(form) }}
                    {{ form_row(form.label) }}
                    {{ form_row(form.color) }}
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success btn-submit pull-right'}, 'label' : 'Add Tag'}) }}
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}