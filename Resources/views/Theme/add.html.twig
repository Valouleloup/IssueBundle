{% extends '@ValouleloupIssue/Theme/base_theme.html.twig' %}

{% block body %}
    <div class="row">
        <div class="panel panel-default send-theme" id="send-theme">

            <div class="panel-heading">New Theme</div>
            <div class="panel-body">
                <div class="form">
                    {{ form_start(form) }}
                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success btn-submit pull-right'}, 'label' : 'Add Theme'}) }}
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}